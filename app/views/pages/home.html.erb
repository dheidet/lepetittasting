<div class="container">
  <div class="row">
    <div class="col-xs-10 col-xs col-sm-6 col-sm">
      <h1>Dégustations</h1>
      <div class="container">
        <div class="row">
          <div class="col-xs-10 col-xs-offset-1 col-sm-6 col-sm-offset-3">
            <table>
              <thead>
                <tr>
                  <th>Nom de domaine</th>
                  <th colspan="3"></th>
                </tr>
              </thead>
              <tbody>
                <% @estates.each do |estate| %>
                  <div class="sale-card card-shadow">
                    <%= link_to estate_path(estate) do %>
                      <div class="sale-link"></div>
                    <div class="sale-card-etiquette text-center">
                      <div>
                        <div class="sale-card-estate">
                          <%= estate.name %>
                        </div>
                        <div class="sale-card-cuvee">
                          <%= estate.description %>
                        </div>
                      </div>
                    </div>
                    <% end %>
                  </div>
                  <tr>
                    <td><%= estate.name %></td>
                    <!-- <td><%= estate.description %></td> -->
                    <td>
                      <% if policy(estate).edit? %>
                        <%= link_to 'éditer', edit_estate_path(estate) %>
                      <% end %>
                    </td>
                    <td>
                      <% if policy(estate).destroy? %>
                        <%= link_to 'supprimer', estate, method: :delete, data: { confirm: "Etes-vous sûr ?" } %>
                      <% end %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
            <p><%= link_to 'Ajouter un domaine', new_estate_path %></p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

