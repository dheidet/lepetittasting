<div class="container">
  <div class="row">
    <div class="col-xs-10 col-xs-offset-1 col-sm-6 col-sm-offset-3">
      <%= simple_form_for(@competition) do |f| %>
        <h3 class="text-center">Comp√©tition</h3>
        <%= f.error_notification %>
        <%= f.hidden_field :wine_id, value: @wine %>
        <%= f.input :contenance, label: "Contenance", input_html: {value: 75} %>
        <%= f.input :competitor, label: "Nom du Vendeur" %>
        <%= f.input :link, label: "Lien" %>
        <h3 class="text-center">Palier de prix</h3>
        <%= f.simple_fields_for :competition_price_stages do |cps| %>
          <%= render 'competition_price_stage_fields', f: cps %>
        <% end %>
        <%= link_to_add_fields "Ajouter 1 palier de prix", f, :competition_price_stages %>
        <div class="text-center"><span class="flex padded-top padded-bot"><%= f.button :submit, "#{@submit_label}", class: "btn btn-primary" %></span></div>
      <% end %>
    </div>
  </div>
</div>
