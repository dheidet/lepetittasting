<div class="panel panel-default">
  <!-- Default panel contents -->
  <div class="panel-heading"><%= pluralize @competitions == nil ? 0 : @competitions.count, "concurrent" %></div>

  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>Concurrent</th>
        <th>Qté</th>
        <th>Prix Vin</th>
        <th>Prix Transport</th>
        <th>Prix Total</th>
      </tr>
    </thead>
    <tbody>
      <% @competitions.each do |compet| %>
        <% compet.competition_price_stages.each do |price| %>
        <tr>
          <td><%= compet.competitor if !compet.competitor.nil? %></td>
          <td><%= price.conditionning %></td>
          <td><%= price.wine_price %></td>
          <td><%= price.transport_price %></td>
          <% @price = price.wine_price + price.transport_price %>
          <td><%= @price %></td>
        </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>
