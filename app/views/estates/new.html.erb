<div class="container">
  <div class="row">
    <div class="col-xs-10 col-xs-offset-1 col-sm-6 col-sm-offset-3">
      <h1 class="text-center">Le domaine</h1>
      <%= simple_form_for(@estate) do |f| %>
        <%= f.error_notification %>
        <%= f.input :name, label: "Nom du domaine" %>
        <%= f.input :description, label: "Description", as: :text %>
        <h1 class="text-center">Le vin</h1>
        <%= f.simple_fields_for :wines do |wine| %>
          <%= render 'shared/wine_fields', f: wine %>
        <% end %>
        <div class="text-center"><span class="flex padded-top padded-bot"><%= f.button :submit, "#{@submit_label}", class: "btn btn-primary" %></span></div>
      <% end %>
    </div>
  </div>
</div>
